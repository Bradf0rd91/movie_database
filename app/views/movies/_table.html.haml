- if m.loanee.blank?
  %tr
    %td
      = m.title
    %td
      = m.year
    %td
      = m.rec_form
    %td
      = m.loanee
    %td
      = link_to 'Check out', edit_movie_path(m), class: "btn"
- else
  %tr.error
    %td
      = m.title
    %td
      = m.year
    %td
      = m.rec_form
    %td
      = m.loanee
    %td
      = link_to 'Check in', edit_movie_path(m), class: "btn btn-success"